<!DOCTYPE html>
<html>
  <head>
    <title>Instagram</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

        <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>

  <body>
    <header class="header">
      <%= link_to root_path do %>
        <p class="header_pageTitle">Instagram</p>
      <% end %>

        <div class="header_likes">
          <%= image_tag 'heart.svg', class: 'header_avatar_likes' %>
        </div>
        <div class="dropdown">
          <%= image_tag 'default-avatar.png', class: 'header_avatar dropbtn' %>
          <div class="dropdown-content">
          <% if user_signed_in? %>
            <%= link_to 'profile', profile_path %>
            <%= link_to 'logout', destroy_user_session_path, data: { method: 'delete' } %>
          <% else %>
            <%= link_to 'login', new_user_session_path, class: 'header_loginBtn' %>
          <% end %>
          </div>
        </div>
      </header>
      <% if flash.present? %>
      <div class="flash">
        <% flash.each do |key, value| %>
          <div class="<%= key %>"><%= value %></div>
        <% end %>
      </div>
    <% end %>
      <%= yield %>
  </body>
</html>