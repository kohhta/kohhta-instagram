<div class="container">

  <div class="tabs">
    <div class="tabs_item active">
      新着記事一覧
    </div>
    <div class="tabs_item">
      タイムライン
    </div>
  </div>

  <% @articles.each do |article| %>
    <%= link_to article_path(id: article.id) do %>
      <div class="card">
        <div class="card_content">
          <div class="card_detail">
                <%= image_tag 'default-avatar.png' %>
                <div>
                  <p>cohki0305</p>
                  <p>2020/4/16</p>
                </div>
                 <div class="article_detail_actions">
                  <div class="dropdown">
                    <%= image_tag 'actions.svg', class: 'dropbtn' %>
                    <div class="dropdown-content mini">
                      <a href="#">編集する</a>
                    </div>
                  </div>
                </div>
            </div>
              <div class="card_image">
                <%= image_tag 'nils.jpg' %>
              </div>
              <div class="card_heart">
                <%= image_tag 'heart.svg' %>
                <span>23</span>
              </div>
                  <%= article.content %>
            </div>
        </div>
    <% end %>
  <% end %>

   <%= link_to new_article_path do %>
    <div class="float_btn">
     <div class="POST">Post</div>
    </div>
  <% end %>
    
  </div>

  


